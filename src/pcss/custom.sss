.header-logo
  background-image: url('../../custom/img/logo.png')
  display: block

// custom components
.dmenu
  background: color(white a(80%))
  position: relative
  transition: background .3s ease
  &::before
    display: block
    font-family: 'icons'
    position: absolute
    content: '\E7DD'
    font-size: 30px
    color: #8ca1a9
    left: 5%
    bottom: 10px
    z-index: 0
    transition: color .2s ease
  a
    display: block
    padding: 15px
    text-decoration: none
  &:hover
    background: white
    &::before
      content: '\E7DB'
      color: #c1c5c9
    .dmenu-hidden
      height: auto
      opacity: 1
      a
        background: #eaeaea
        transition: all .3s ease
        &:hover
          background: #d6d6d6
          text-decoration: underline
  &-hidden
    background: white
    height: 0px
    pointer-events: none
    opacity: 0
    z-index: 1
    position: absolute
    top: 50px
    left: 0
    width: 100%
// icons
.icon
  font-family: 'icons'
  display: inline-block
  font-size: 1em
  speak: none
  font-style: normal
  font-weight: normal
  font-variant: normal
  text-transform: none
  line-height: 1
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

.icon-skype::before
  content: '\E7E7'
  cursor: pointer
  color: #12A5F4
.icon-tag::before
  content: '\E652'
.icon-calendar::before
  content: '\E61F'
.icon-timer::before
  content: '\E6C7'
.icon-location::before
  content: '\E61B'
.icon-youtube::before
  content: '\E606'
.icon-bonus::before
  content: '\E6A0'
.icon-lock::before
  content: '\E636'
.icon-ccard::before
  content: '\e903'
.rub::before
