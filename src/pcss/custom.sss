// jBox theme
.jbox-theme-over
  img
    display: inline-block
    max-width: 100%
    transition: all .5s ease
  .jbox
    position: relative
    height: 100%
    display: block
    overflow: hidden
    font-size: 0
    &::before
      position: absolute 0 0 0 0
      width: 100%
      height: 100%
      background: black
      display: block
      content: ' '
      opacity: 0
      z-index: 3
      transition: all .3s ease-in-out
      transform: translate3d(50%, 50%, 0)
    &::after
      position: absolute
      left: -30px
      top: -30px
      z-index: 4
      transition: all .6s ease
      font-size: 25px
      content: '\E632'
      display: block
      font-family: 'icons'
      color: white
      speak: none
      font-style: normal
      font-weight: normal
      font-variant: normal
      text-transform: none
      -webkit-font-smoothing: antialiased
      -moz-osx-font-smoothing: grayscale
    &:hover::before
      opacity: .5
      transform: translate3d(5%, 5%, 0)
    &:hover::after
      left: 45%
      top: 45%
    &:hover img
      transform: scale(1.1)

.comments-theme-dark
  input, textarea
